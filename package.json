{
  "name": "bitbucket-mcp-server",
  "version": "0.6.0",
  "description": "A Model Context Protocol server",
  "private": true,
  "type": "module",
  "bin": {
    "bitbucket-mcp-server": "./build/index.js"
  },
  "files": [
    "build"
  ],
  "scripts": {
    "build": "tsc && node -e \"require('fs').chmodSync('build/index.js', '755'); require('fs').chmodSync('build/oauth-authorize.js', '755')\"",
    "prepare": "npm run build",
    "watch": "tsc --watch",
    "inspector": "npx @modelcontextprotocol/inspector build/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "0.6.0",
    "axios": "^1.10.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.24",
    "@vitest/ui": "^3.2.4",
    "typescript": "^5.3.3",
    "vitest": "^3.2.4"
  }
}
